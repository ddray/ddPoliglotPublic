@page
@inject CommonLocalizationService localizer
@using Microsoft.AspNetCore.Localization
@model LogoutModel
@{
    ViewData["Title"] = localizer.Get("xxLog out");
    ViewData["Noindex"] = true;
    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
}

<!-- page title -->
<section class="page-title-section overlay" data-background="/img/backgrounds/page-title.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ul class="list-inline custom-breadcrumb">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="@@page-link">TODO</a></li>
                    <li class="list-inline-item text-white h3 font-secondary @@nasted"></li>
                </ul>
                <p class="text-lighten"></p>
            </div>
        </div>
    </div>
</section>
<!-- /page title -->
<div class="container mt-3 mb-3">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@localizer.Get("xxClick here to Logout")</button>
            </form>
        }
        else
        {
<p>@localizer.Get("xxYou have successfully logged out of the application.")</p>
        }
    }
</div>
